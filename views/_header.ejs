<link rel="stylesheet" href="/css/header.css">


<header>

    <nav>
        <div class="nav-links">
            <ul class="h-links">
                <% if(locals.user){ %>
                    <li>
                        <a href="/users/profile">
                            <%= user.name %>
                        </a>

                    </li>
                    <li><a href="/users/sign-out">Sign-out</a></li>
                    <% } else { %>
                        <li class="signin-h primary-btn"><a href="/users/sign-in">SignIn</a></li>
                        <li class="signup-h primary-btn"><a href="/users/sign-up">SignUp</a></li>
                        <% } %>
            </ul>
        </div>

    </nav>

</header>